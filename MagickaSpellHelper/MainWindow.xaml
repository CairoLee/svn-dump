        <Image Height="36" HorizontalAlignment="Left" Margin="7,59,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="36" Source="/MagickaSpellHelper;component/Images/Water.png" Canvas.Left="286" Canvas.Top="-48" />
        <TextBox Height="30" HorizontalAlignment="Left" Margin="39,81,0,0" Name="textBox1" VerticalAlignment="Top" Width="23" Text="Q" FontWeight="Bold" FontSize="15" BorderThickness="0" Canvas.Left="286" Canvas.Top="-48">
            <TextBox.Background>
                <SolidColorBrush />
            </TextBox.Background>
        </TextBox>
        <Image Height="36" HorizontalAlignment="Left" Margin="58,59,0,0" Name="image2" Source="/MagickaSpellHelper;component/Images/Life.png" Stretch="Fill" VerticalAlignment="Top" Width="36" Canvas.Left="286" Canvas.Top="-48" />
        <TextBox FontSize="15" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="90,81,0,0" Name="textBox2" Text="W" VerticalAlignment="Top" Width="23" BorderThickness="0" Canvas.Left="286" Canvas.Top="-48">
            <TextBox.Background>
                <SolidColorBrush />
            </TextBox.Background>
        </TextBox>
        <Image Height="36" HorizontalAlignment="Left" Margin="109,59,0,0" Name="image3" Source="/MagickaSpellHelper;component/Images/Guard.png" Stretch="Fill" VerticalAlignment="Top" Width="36" Canvas.Left="286" Canvas.Top="-48" />
        <TextBox FontSize="15" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="141,81,0,0" Name="textBox3" Text="E" VerticalAlignment="Top" Width="23" BorderThickness="0" Canvas.Left="286" Canvas.Top="-48">
            <TextBox.Background>
                <SolidColorBrush />
            </TextBox.Background>
        </TextBox>
        <Image Height="36" HorizontalAlignment="Left" Margin="159,59,0,0" Name="image4" Source="/MagickaSpellHelper;component/Images/Ice.png" Stretch="Fill" VerticalAlignment="Top" Width="36" Canvas.Left="286" Canvas.Top="-48" />
