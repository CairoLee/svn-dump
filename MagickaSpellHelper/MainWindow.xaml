<Window x:Class="MagickaSpellHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Magicka Spell Helper" Height="460" Width="690" xmlns:my="clr-namespace:MagickaSpellHelper" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/MagickaSpellHelper;component/Images/MagicBook.ico" Closing="Window_Closing" Background="#FFD8D8D8">
    <Canvas Width="660">
