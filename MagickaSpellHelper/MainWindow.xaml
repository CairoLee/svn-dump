        <Image Canvas.Left="569" Canvas.Top="12" Height="36" Name="image10" Source="/MagickaSpellHelper;component/Images/MMB.png" Stretch="Fill" Width="36" />
        <Image Canvas.Left="611" Canvas.Top="12" Height="36" Name="image11" Source="/MagickaSpellHelper;component/Images/RMB.png" Stretch="Fill" Width="36" />
        <Image Canvas.Left="548" Canvas.Top="58" Height="36" Name="image12" Source="/MagickaSpellHelper;component/Images/Shift.png" Stretch="Fill" Width="36" />
        <Image Canvas.Left="592" Canvas.Top="58" Height="36" Name="image13" Source="/MagickaSpellHelper;component/Images/Space.png" Stretch="Fill" Width="36" />
        <RadioButton Canvas.Left="8" Canvas.Top="330" Content="_1. Very fast (not so recommended)" Height="16" Name="radioButton1" Checked="radioButton3_Checked" />
        <RadioButton Canvas.Left="8" Canvas.Top="352" Content="_2. Fast (recommended)" Height="16" Name="radioButton2" IsChecked="True" Checked="radioButton3_Checked" />
        <RadioButton Canvas.Left="8" Canvas.Top="373" Content="_3. Ugh... not so fast (but safely work)" Height="16" Name="radioButton3" Checked="radioButton3_Checked" />
        <Button Canvas.Left="386" Canvas.Top="353" Height="69" Name="btnLaunchGame" Width="267" BorderThickness="0" Click="btnLaunchGame_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF757575" Offset="0"/>
                    <GradientStop Color="#FF101010" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <StackPanel Orientation="Horizontal">
                <Image Source="/MagickaSpellHelper;component/Images/launch.png" Height="64" Width="64" />
                <TextBlock VerticalAlignment="Center" FontSize="20">Launch <Bold FontSize="24"><Bold.Foreground><LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0"><GradientStop Color="White" Offset="0" /><GradientStop Color="#FF909090" Offset="1" /></LinearGradientBrush></Bold.Foreground>Magicka</Bold></TextBlock>
            </StackPanel>
        </Button>
        <CheckBox Canvas.Left="8" Canvas.Top="399" Content="Remember my configuration the next start" Height="16" Name="chkRemember" />
    </Canvas>
</Window>
