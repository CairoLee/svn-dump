            <TextBox.Background>
                <SolidColorBrush />
            </TextBox.Background>
        </TextBox>
        <Label Content="Your macro mapping list:" Height="28" HorizontalAlignment="Left" Margin="7,156,0,0" Name="label3" VerticalAlignment="Top" Canvas.Left="-1" Canvas.Top="-48" />
        <ScrollViewer Height="190" Name="scrollViewer1" Width="645" Margin="7,181,-172,-320" Canvas.Top="-44" Canvas.Left="1" BorderThickness="1">
            <ScrollViewer.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0" />
                    <GradientStop Color="#FFFFF4CE" Offset="1" />
                </LinearGradientBrush>
            </ScrollViewer.Background>
            <StackPanel HorizontalAlignment="Left" Name="pnMapper" VerticalAlignment="Top" Width="645">

            </StackPanel>
        </ScrollViewer>
        <Button Canvas.Left="236" Canvas.Top="108" Content="L_oad from file" Height="23" Name="button2" Width="93" Click="button2_Click" />
