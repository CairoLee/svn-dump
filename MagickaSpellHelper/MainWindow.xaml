            <TextBox.Background>
                <SolidColorBrush />
            </TextBox.Background>
        </TextBox>
        <Image Height="36" HorizontalAlignment="Left" Margin="30,106,0,0" Name="image5" Source="/MagickaSpellHelper;component/Images/Lightning.png" Stretch="Fill" VerticalAlignment="Top" Width="36" Canvas.Left="286" Canvas.Top="-48" />
        <TextBox FontSize="15" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="62,128,0,0" Name="textBox5" Text="A" VerticalAlignment="Top" Width="23" BorderThickness="0" Canvas.Left="286" Canvas.Top="-48">
            <TextBox.Background>
                <SolidColorBrush />
            </TextBox.Background>
        </TextBox>
        <Image Height="36" HorizontalAlignment="Left" Margin="81,106,0,0" Name="image6" Source="/MagickaSpellHelper;component/Images/Arcane.png" Stretch="Fill" VerticalAlignment="Top" Width="36" Canvas.Left="286" Canvas.Top="-48" />
        <TextBox FontSize="15" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="113,128,0,0" Name="textBox6" Text="S" VerticalAlignment="Top" Width="23" BorderThickness="0" Canvas.Left="286" Canvas.Top="-48">
            <TextBox.Background>
                <SolidColorBrush />
            </TextBox.Background>
        </TextBox>
        <Image Height="36" HorizontalAlignment="Left" Margin="132,106,0,0" Name="image7" Source="/MagickaSpellHelper;component/Images/Earth.png" Stretch="Fill" VerticalAlignment="Top" Width="36" Canvas.Left="286" Canvas.Top="-48" />
        <TextBox FontSize="15" FontWeight="Bold" Height="30" HorizontalAlignment="Left" Margin="164,128,0,0" Name="textBox7" Text="D" VerticalAlignment="Top" Width="23" BorderThickness="0" Canvas.Left="286" Canvas.Top="-48">
            <TextBox.Background>
                <SolidColorBrush />
            </TextBox.Background>
        </TextBox>
        <Image Height="36" HorizontalAlignment="Left" Margin="182,106,0,0" Name="image8" Source="/MagickaSpellHelper;component/Images/Fire.png" Stretch="Fill" VerticalAlignment="Top" Width="36" Canvas.Left="286" Canvas.Top="-48" />
